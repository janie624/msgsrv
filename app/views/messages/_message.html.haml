#modal_message_show.modal.fade
  .modal-header
    %a.close{:'data-dismiss' => "modal"} Ã—
    %h3 Message from #{message.sender.name}
  .modal-body
    %dl.dl-horizontal
      %dt= message.class.human_attribute_name(:subject)
      %dd
        %blockquote= message.subject
      %dt Message
      %dd
        %blockquote= simple_format message.body

  .modal-footer
    = link_to 'Reply', [:new, :message], :id => "reply_on_message", :class => "btn btn-primary", :data => {:remote => true, :type => :script,:params => {:message => {:recipient_ids => message.sender.id.to_s, :subject => "Re: #{message.subject}"}}}
    .btn{:data => {:dismiss => "modal"}} Close
